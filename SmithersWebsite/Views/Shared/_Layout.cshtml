<!DOCTYPE html>
<html>
<head>
    <title>Brandon Smithers - Welcome</title>
    <!--External libraries-->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <!--My libraries-->
    <link rel="stylesheet" href="~/Content/Main.css">
    <!--This enables the site to size down to small/mobile screens-->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body class="main-body">
    <!--The below div contains everything shown in the page, including the shifting content from the nav bar-->
    <div id="main-div" class="container">
        <!--Navigation bar beneath the header, above the selected content-->
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a id="navbar_header" class="navbar-brand" href="http://brandonsmithers.com">Brandon Smithers</a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs_navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs_navbar">
                    <ul class="nav navbar-nav">
                        <li id="nav_li_home" class="@((ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "")" >
                            @Html.ActionLink("Home", "Index", "Home", null, new { })
                        </li>
                        <li id="nav_li_skills" class="@((ViewContext.RouteData.Values["controller"].ToString() == "Experience") ? "active" : "")">
                            @Html.ActionLink("Experience", "Index", "Experience", null, new { })
                        </li>
                        <li id="nav_li_projects" class="@((ViewContext.RouteData.Values["controller"].ToString() == "Projects") ? "active" : "")">
                            @Html.ActionLink("Projects", "Index", "Projects", null, new { })</li>
                        <li id="nav_li_hobbies" class="@((ViewContext.RouteData.Values["controller"].ToString() == "Hobbies") ? "active" : "")"> </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li id="nav_li_resume"><a id="nav_link_resume" href="~/Content/resume.pdf">Resume</a></li>
                        <li id="nav_li_linkedin"><a id="nav_link_linkedin" href="https://www.linkedin.com/in/brandonsmithers">LinkedIn</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!--The content of the page-->
        <div id="nav_content" class="row">            
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/Main.js" >
        //initBody();
    </script>
</body>
</html>
